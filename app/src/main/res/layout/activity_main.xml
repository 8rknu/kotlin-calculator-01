                android:text="/"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:strokeColor="@color/material_dynamic_neutral30"
                app:strokeWidth="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

