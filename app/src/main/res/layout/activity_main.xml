                android:onClick="btnSifirla"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:strokeColor="@color/material_dynamic_neutral30"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnartieksi"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/butonArkaplan"
                android:onClick="btnSayi"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:strokeColor="@color/material_dynamic_neutral30"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnyuzde"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/butonArkaplan"
                android:onClick="btnOp"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:strokeColor="@color/material_dynamic_neutral30"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnbolme"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_weight="1"
                android:backgroundTint="@color/butonArkaplan"
